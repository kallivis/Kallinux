#!/bin/sh
function o()
{
    for file in "$@"
    do
        gnome-open "$file"
    done
}
# Quick find
f() {
    echo "find . -iname \"*$1*\""
    find . -iname "*$1*"
}

# When directory is changed set xterm title to host:dir
chpwd() {
    [[ -t 1 ]] || return
    case $TERM in
	sun-cmd) print -Pn "\e]l%~\e\\";;
        *xterm*|rxvt|\(dt|k|E\)term) print -Pn "\e]2;%m:%~\a";;
    esac
}

